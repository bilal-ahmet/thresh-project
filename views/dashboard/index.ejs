<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Çöp Kamyonu İzleme Sistemi - Dashboard</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="/css/style.css" rel="stylesheet">
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <a class="navbar-brand" href="/dashboard">
                <i class="fas fa-truck me-2"></i>
                Başiskele Çöp Kamyonu İzleme
            </a>
            <div class="navbar-nav ms-auto">
                <span class="navbar-text me-3">
                    <i class="fas fa-map-marker-alt me-1"></i>
                    Kocaeli - Başiskele
                </span>
                <span class="navbar-text me-3">
                    <i class="fas fa-user me-1"></i>
                    <%= user.username %>
                </span>
                <a class="nav-link" href="/auth/logout">
                    <i class="fas fa-sign-out-alt me-1"></i>
                    Çıkış
                </a>
            </div>
        </div>
    </nav>

    <div class="container-fluid py-4">
        <!-- Ana İstatistikler -->
        <div class="row mb-4">
            <div class="col">
                <div class="card bg-primary text-white">
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <div>
                                <h4 class="mb-0"><%= trucks.length %></h4>
                                <small>Toplam Kamyon</small>
                            </div>
                            <div class="align-self-center">
                                <i class="fas fa-truck fa-2x"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="card bg-success text-white">
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <div>
                                <h4 class="mb-0"><%= activeTrucks %></h4>
                                <small>Aktif Kamyon</small>
                            </div>
                            <div class="align-self-center">
                                <i class="fas fa-check-circle fa-2x"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="card bg-info text-white">
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <div>
                                <h4 class="mb-0"><%= trucks.filter(t => t.status === 'maintenance').length %></h4>
                                <small>Bakımda</small>
                            </div>
                            <div class="align-self-center">
                                <i class="fas fa-tools fa-2x"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="card bg-warning text-white">
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <div>
                                <h4 class="mb-0"><%= averageFullness %>%</h4>
                                <small>Ortalama Doluluk</small>
                            </div>
                            <div class="align-self-center">
                                <i class="fas fa-percentage fa-2x"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="card bg-danger text-white">
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <div>
                                <h4 class="mb-0"><%= totalWasteWeight %> ton</h4>
                                <small>Toplam Çöp Ağırlığı</small>
                            </div>
                            <div class="align-self-center">
                                <i class="fas fa-weight-hanging fa-2x"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Konteynır İstatistikleri -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">
                            <i class="fas fa-trash me-2"></i>
                            Günlük Konteynır İstatistikleri
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row text-center">
                            <div class="col-md-2">
                                <div class="stat-item">
                                    <i class="fas fa-list text-primary fa-2x mb-2"></i>
                                    <h4 class="mb-0 text-primary"><%= dailyStats.totalContainers %></h4>
                                    <small class="text-muted">Toplam Konteynır</small>
                                </div>
                            </div>
                            <div class="col-md-2">
                                <div class="stat-item">
                                    <i class="fas fa-check-double text-success fa-2x mb-2"></i>
                                    <h4 class="mb-0 text-success"><%= dailyStats.completedContainers %></h4>
                                    <small class="text-muted">Tamamlanan</small>
                                </div>
                            </div>
                            <div class="col-md-2">
                                <div class="stat-item">
                                    <i class="fas fa-spinner text-warning fa-2x mb-2"></i>
                                    <h4 class="mb-0 text-warning"><%= dailyStats.inProgressContainers %></h4>
                                    <small class="text-muted">Devam Eden</small>
                                </div>
                            </div>
                            <div class="col-md-2">
                                <div class="stat-item">
                                    <i class="fas fa-clock text-secondary fa-2x mb-2"></i>
                                    <h4 class="mb-0 text-secondary"><%= dailyStats.pendingContainers %></h4>
                                    <small class="text-muted">Bekleyen</small>
                                </div>
                            </div>
                            <div class="col-md-2">
                                <div class="stat-item">
                                    <i class="fas fa-weight text-info fa-2x mb-2"></i>
                                    <h4 class="mb-0 text-info"><%= (dailyStats.totalWasteCollected / 1000).toFixed(1) %></h4>
                                    <small class="text-muted">Toplanan (ton)</small>
                                </div>
                            </div>
                            <div class="col-md-2">
                                <div class="stat-item">
                                    <i class="fas fa-chart-line text-success fa-2x mb-2"></i>
                                    <h4 class="mb-0 text-success"><%= dailyStats.completionRate.toFixed(1) %>%</h4>
                                    <small class="text-muted">Tamamlanma</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Kamyonlar -->
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">
                            <i class="fas fa-truck me-2"></i>
                            Başiskele Kamyon Filosu
                        </h5>
                        <div class="text-muted">
                            <small><i class="fas fa-map-marker-alt me-1"></i>Emir Sultan & Millet Caddeleri</small>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <% trucks.forEach(function(truck, index) { %>
                                <div class="col-md-6 col-lg-4 mb-4">
                                    <div class="card truck-card h-100" onclick="window.location.href='/dashboard/truck/<%= truck.id %>'">
                                        <div class="card-body">
                                            <div class="d-flex align-items-center mb-3">
                                                <div class="me-3">
                                                    <div class="truck-visual-small fullness-<%= Math.floor(truck.fullness / 10) * 10 %>" data-truck-id="<%= truck.id %>"></div>
                                                </div>
                                                <div class="flex-grow-1">
                                                    <h6 class="mb-1"><%= truck.name %></h6>
                                                    <small class="text-muted"><%= truck.plate %></small>
                                                    <br>
                                                    <small class="text-muted">
                                                        <i class="fas fa-user-circle me-1"></i><%= truck.driver %>
                                                    </small>
                                                </div>
                                                <div class="ms-auto">
                                                    <span class="badge <%= truck.status === 'active' ? 'bg-success' : 'bg-warning' %>">
                                                        <%= truck.status === 'active' ? 'Aktif' : 'Bakım' %>
                                                    </span>
                                                </div>
                                            </div>
                                            
                                            <div class="row text-center mb-3">
                                                <div class="col-4">
                                                    <div class="fullness-indicator">
                                                        <div class="progress mb-2" style="height: 8px;">
                                                            <div class="progress-bar-dashboard" data-fullness="<%= truck.fullness %>"></div>
                                                        </div>
                                                        <small class="text-muted">Doluluk: <%= truck.fullness %>%</small>
                                                    </div>
                                                </div>
                                                <div class="col-4">
                                                    <div>
                                                        <i class="fas fa-weight text-warning"></i>
                                                        <small class="text-muted d-block"><%= ((truck.fullness * truckCapacity) / 100 / 1000).toFixed(1) %> ton</small>
                                                    </div>
                                                </div>
                                                <div class="col-4">
                                                    <div>
                                                        <i class="fas fa-clock text-info"></i>
                                                        <small class="text-muted d-block"><%= truck.workingHours %> saat</small>
                                                    </div>
                                                </div>
                                            </div>

                                            <!-- Ek Bilgiler -->
                                            <div class="row text-center mb-3">
                                                <div class="col-4">
                                                    <div>
                                                        <i class="fas fa-gas-pump text-primary"></i>
                                                        <small class="text-muted d-block"><%= truck.fuelLevel %>% Yakıt</small>
                                                    </div>
                                                </div>
                                                <div class="col-4">
                                                    <div>
                                                        <i class="fas fa-tachometer-alt text-success"></i>
                                                        <small class="text-muted d-block"><%= truck.speed %> km/h</small>
                                                    </div>
                                                </div>
                                                <div class="col-4">
                                                    <div>
                                                        <i class="fas fa-trash-alt text-warning"></i>
                                                        <small class="text-muted d-block"><%= truck.collectedContainers %>/<%= truck.totalContainers %></small>
                                                    </div>
                                                </div>
                                            </div>
                                            
                                            <div class="mt-3">
                                                <small class="text-muted">
                                                    <i class="fas fa-map-marker-alt me-1"></i>
                                                    <%= truck.location %>
                                                </small>
                                                <br>
                                                <small class="text-muted">
                                                    <i class="fas fa-route me-1"></i>
                                                    <%= truck.route %>
                                                </small>
                                                <br>
                                                <small class="text-muted">
                                                    <i class="fas fa-flag-checkered me-1"></i>
                                                    Sonraki: <%= truck.nextStop %>
                                                </small>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            <% }); %>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Hızlı Erişim Kartları -->
        <div class="row mt-4">
            <div class="col-md-4">
                <div class="card border-primary">
                    <div class="card-body text-center">
                        <i class="fas fa-route text-primary fa-3x mb-3"></i>
                        <h5>Rota Planlama</h5>
                        <p class="text-muted">Emir Sultan ve Millet caddeleri rota optimizasyonu</p>
                        <button class="btn btn-primary btn-sm">Rotaları Görüntüle</button>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card border-success">
                    <div class="card-body text-center">
                        <i class="fas fa-chart-bar text-success fa-3x mb-3"></i>
                        <h5>Konteynır Raporu</h5>
                        <p class="text-muted">Günlük toplama raporları ve istatistikler</p>
                        <button class="btn btn-success btn-sm">Raporları İncele</button>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card border-warning">
                    <div class="card-body text-center">
                        <i class="fas fa-cogs text-warning fa-3x mb-3"></i>
                        <h5>Sistem Ayarları</h5>
                        <p class="text-muted">Kamyon ve konteynır ayarları</p>
                        <button class="btn btn-warning btn-sm">Ayarlara Git</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/truck-visual.js"></script>
    <script>
        // Progress bar'ları JavaScript ile ayarla
        document.addEventListener('DOMContentLoaded', function() {
            const progressBars = document.querySelectorAll('.progress-bar-dashboard');
            progressBars.forEach(bar => {
                const fullness = parseInt(bar.getAttribute('data-fullness'));
                
                // CSS sınıfını belirle
                let colorClass = 'bg-success';
                if (fullness > 80) colorClass = 'bg-danger';
                else if (fullness > 60) colorClass = 'bg-warning';
                
                // Style ve class ekle
                bar.className = 'progress-bar ' + colorClass;
                bar.style.width = fullness + '%';
            });

            // Kamyon görsellerinin doluluk animasyonunu başlat
            const truckVisuals = document.querySelectorAll('.truck-visual-small');
            truckVisuals.forEach((truck, index) => {
                // Kamyon ID'sini al
                const truckId = truck.getAttribute('data-truck-id');
                
                setTimeout(() => {
                    truck.style.opacity = '1';
                }, index * 100);
            });

            // İstatistik kartlarına hover efekti
            const statItems = document.querySelectorAll('.stat-item');
            statItems.forEach(item => {
                item.addEventListener('mouseenter', function() {
                    this.style.transform = 'scale(1.05)';
                    this.style.transition = 'transform 0.3s ease';
                });
                item.addEventListener('mouseleave', function() {
                    this.style.transform = 'scale(1)';
                });
            });

            // Kamyon kartlarına gerçek zamanlı güncelleme simülasyonu
            setInterval(() => {
                const activeCards = document.querySelectorAll('.truck-card:not([data-status="maintenance"])');
                activeCards.forEach((card, cardIndex) => {
                    const progressBar = card.querySelector('.progress-bar-dashboard');
                    if (progressBar && Math.random() < 0.1) { // %10 şans ile güncelle
                        const currentFullness = parseInt(progressBar.getAttribute('data-fullness'));
                        const newFullness = Math.min(100, currentFullness + Math.floor(Math.random() * 3));
                        progressBar.setAttribute('data-fullness', newFullness);
                        progressBar.style.width = newFullness + '%';
                        
                        // Doluluk yüzdesini güncelle
                        const fullnessText = card.querySelector('.fullness-indicator small');
                        if (fullnessText) {
                            fullnessText.textContent = `Doluluk: ${newFullness}%`;
                        }

                        // Yeni basit kamyon doluluk sistemini güncelle
                        const truckVisual = card.querySelector('.truck-visual-small');
                        if (truckVisual) {
                            // ID yoksa oluştur
                            if (!truckVisual.id) {
                                truckVisual.id = `truck-card-${cardIndex}-${Date.now()}`;
                            }
                            
                            // Yeni basit sistemle güncelle
                            if (window.updateTruckFullness) {
                                window.updateTruckFullness(`#${truckVisual.id}`, newFullness);
                            }
                        }
                    }
                });
            }, 30000); // 30 saniyede bir güncelle
        });
    </script>
</body>
</html> 