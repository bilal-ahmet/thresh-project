<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Çöp Kamyonu İzleme Sistemi - Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="/css/style.css" rel="stylesheet">
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <a class="navbar-brand" href="/dashboard">
                <i class="fas fa-truck me-2"></i>
                Çöp Kamyonu İzleme
            </a>
            <div class="navbar-nav ms-auto">
                <span class="navbar-text me-3">
                    <i class="fas fa-user me-1"></i>
                    <%= user.username %>
                </span>
                <a class="nav-link" href="/auth/logout">
                    <i class="fas fa-sign-out-alt me-1"></i>
                    Çıkış
                </a>
            </div>
        </div>
    </nav>

    <div class="container-fluid py-4">
        <!-- İstatistikler -->
        <div class="row mb-4">
            <div class="col">
                <div class="card bg-primary text-white">
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <div>
                                <h4 class="mb-0"><%= trucks.length %></h4>
                                <small>Toplam Kamyon</small>
                            </div>
                            <div class="align-self-center">
                                <i class="fas fa-truck fa-2x"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="card bg-success text-white">
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <div>
                                <h4 class="mb-0"><%= trucks.filter(t => t.status === 'active').length %></h4>
                                <small>Aktif Kamyon</small>
                            </div>
                            <div class="align-self-center">
                                <i class="fas fa-check-circle fa-2x"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="card bg-info text-white">
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <div>
                                <h4 class="mb-0"><%= trucks.filter(t => t.status === 'maintenance').length %></h4>
                                <small>Bakımda</small>
                            </div>
                            <div class="align-self-center">
                                <i class="fas fa-tools fa-2x"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="card bg-warning text-white">
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <div>
                                <h4 class="mb-0"><%= averageFullness %>%</h4>
                                <small>Ortalama Doluluk</small>
                            </div>
                            <div class="align-self-center">
                                <i class="fas fa-percentage fa-2x"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="card bg-danger text-white">
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <div>
                                <h4 class="mb-0"><%= totalWasteWeight %> ton</h4>
                                <small>Toplam Çöp Ağırlığı</small>
                            </div>
                            <div class="align-self-center">
                                <i class="fas fa-weight-hanging fa-2x"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Kamyonlar -->
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">
                            <i class="fas fa-truck me-2"></i>
                            Kamyon Listesi
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <% trucks.forEach(function(truck) { %>
                                <div class="col-md-6 col-lg-4 mb-4">
                                    <div class="card truck-card h-100" onclick="window.location.href='/dashboard/truck/<%= truck.id %>'">
                                        <div class="card-body">
                                            <div class="d-flex align-items-center mb-3">
                                                <div class="me-3">
                                                    <div class="truck-visual-small fullness-<%= Math.floor(truck.fullness / 10) * 10 %>"></div>
                                                </div>
                                                <div>
                                                    <h6 class="mb-1"><%= truck.name %></h6>
                                                    <small class="text-muted"><%= truck.plate %></small>
                                                </div>
                                                <div class="ms-auto">
                                                    <span class="badge <%= truck.status === 'active' ? 'bg-success' : 'bg-warning' %>">
                                                        <%= truck.status === 'active' ? 'Aktif' : 'Bakım' %>
                                                    </span>
                                                </div>
                                            </div>
                                            
                                            <div class="row text-center">
                                                <div class="col-4">
                                                    <div class="fullness-indicator">
                                                        <div class="progress mb-2" style="height: 8px;">
                                                            <div class="progress-bar-dashboard" data-fullness="<%= truck.fullness %>"></div>
                                                        </div>
                                                        <small class="text-muted">Doluluk: <%= truck.fullness %>%</small>
                                                    </div>
                                                </div>
                                                <div class="col-4">
                                                    <div>
                                                        <i class="fas fa-weight text-warning"></i>
                                                        <small class="text-muted d-block"><%= ((truck.fullness * truckCapacity) / 100).toFixed(1) %> ton</small>
                                                    </div>
                                                </div>
                                                <div class="col-4">
                                                    <div>
                                                        <i class="fas fa-clock text-info"></i>
                                                        <small class="text-muted d-block"><%= truck.workingHours %> saat</small>
                                                    </div>
                                                </div>
                                            </div>
                                            
                                            <div class="mt-3">
                                                <small class="text-muted">
                                                    <i class="fas fa-map-marker-alt me-1"></i>
                                                    <%= truck.location %>
                                                </small>
                                                <br>
                                                <small class="text-muted">
                                                    <i class="fas fa-route me-1"></i>
                                                    <%= truck.route %>
                                                </small>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            <% }); %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Progress bar'ları JavaScript ile ayarla
        document.addEventListener('DOMContentLoaded', function() {
            const progressBars = document.querySelectorAll('.progress-bar-dashboard');
            progressBars.forEach(bar => {
                const fullness = parseInt(bar.getAttribute('data-fullness'));
                
                // CSS sınıfını belirle
                let colorClass = 'bg-success';
                if (fullness > 80) colorClass = 'bg-danger';
                else if (fullness > 60) colorClass = 'bg-warning';
                
                // Style ve class ekle
                bar.className = 'progress-bar ' + colorClass;
                bar.style.width = fullness + '%';
            });

            // Kamyon görsellerinin doluluk animasyonunu başlat
            const truckVisuals = document.querySelectorAll('.truck-visual-small');
            truckVisuals.forEach((truck, index) => {
                setTimeout(() => {
                    truck.style.opacity = '1';
                }, index * 100);
            });
        });
    </script>
</body>
</html> 